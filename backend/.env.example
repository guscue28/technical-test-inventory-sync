# =====================================================
# Critical Inventory Synchronization Module
# Environment Configuration
# =====================================================

APP_NAME="Inventory Synchronization Module"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =====================================================
# Database Configuration
# =====================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=inventory_sync
DB_USERNAME=root
DB_PASSWORD=

# =====================================================
# Broadcasting & Caching
# =====================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# =====================================================
# Redis Configuration (Optional)
# =====================================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =====================================================
# Mail Configuration (Optional)
# =====================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =====================================================
# Application Specific Configuration
# =====================================================

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30
API_DEFAULT_PER_PAGE=50
API_MAX_PER_PAGE=100

# Inventory Configuration
INVENTORY_MAX_STOCK=999999
INVENTORY_ENABLE_NEGATIVE_STOCK=false
INVENTORY_AUTO_LOG=true
INVENTORY_LOG_RETENTION_DAYS=365

# Frontend Configuration
FRONTEND_AUTO_REFRESH=true
FRONTEND_REFRESH_INTERVAL=300000
FRONTEND_ENABLE_EXPORT=true
FRONTEND_MAX_EXPORT_RECORDS=10000

# Security Configuration
SECURITY_ENABLE_CSRF=true
SECURITY_API_KEY=
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_MAX_LOGIN_ATTEMPTS=5

# Performance Configuration
PERFORMANCE_ENABLE_QUERY_CACHE=true
PERFORMANCE_CACHE_TTL=3600
PERFORMANCE_ENABLE_COMPRESSION=true

# Integration Configuration
PRESTASHOP_ENABLED=false
PRESTASHOP_API_KEY=
WORDPRESS_ENABLED=false
WORDPRESS_SECRET_KEY=

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_SLACK_WEBHOOK=
MONITORING_LOG_SLOW_QUERIES=true
MONITORING_SLOW_QUERY_THRESHOLD=1000
